# -*- coding: utf-8 -*-

#:import datetime datetime

<MyMDLabel@MDLabel>
    size_hint_y: None
    height: self.texture_size[1]

<Result>:
    name: 'result'
    app: app
    orientation: "vertical"

    BoxLayout:
        orientation: "vertical"
        size_hint: .95, .95
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDLabel:
            font_style: "H5"
            theme_text_color: 'Primary'
            size_hint: 1, .2
            text: 'Итоговый отчет за'
            halign: 'center'
            valign: 'middle'
            pos_hint: {'center_x': .5, 'center_y': .9}

        MDLabel:
            id: period
            font_style: "H4"
            theme_text_color: 'Primary'
            size_hint: 1, .2
            text: ''
            halign: 'center'
            valign: 'middle'
            pos_hint: {'center_x': .5, 'center_y': .8}

        MDLabel:
            id: status
            font_style: "H6"
            theme_text_color: 'Primary'
            size_hint: 1, .2
            text: ''
            halign: 'center'
            valign: 'middle'
            pos_hint: {'center_x': .5, 'center_y': .7}

        Widget:
            id: space

        MDFillRoundFlatButton:
            id: request
            font_style:"Subtitle2"
            size_hint: .75, .15
            text: 'Показать'
            pos_hint: {'center_x': .5, 'center_y': .1}
            on_release: root.open_table()

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True if not status.text else False

