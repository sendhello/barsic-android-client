# -*- coding: utf-8 -*-

<Zones>:
    name: 'zones'

    BoxLayout:
        orientation: 'vertical'

        Screen:
            name: 'count_clients'
            MDLabel:
                id: name_zone
                font_style: 'Subtitle2'
                theme_text_color: 'Secondary'
                text: ''
                halign: 'center'
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.85}
                height: self.texture_size[1] + dp(4)
            MDLabel:
                id: count
                font_style: 'Subtitle2'
                theme_text_color: 'Primary'
                text: 'Нет данных'
                halign: 'center'
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                height: self.texture_size[1] + dp(4)

            MDLabel:
                id: clients_name
                font_style: 'Subtitle2'
                theme_text_color: 'Secondary'
                text: 'Всего посетило / Всего клиентов'
                halign: 'center'
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.45}
                height: self.texture_size[1] + dp(4)
            MDLabel:
                id: count_clients
                font_style: 'Subtitle2'
                theme_text_color: 'Primary'
                text: 'Нет данных'
                halign: 'center'
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.35}
                height: self.texture_size[1] + dp(4)

            MDRaisedButton:
                text: "Обновить"
                opposite_colors: True
                size_hint: None, None
                size: 4 * dp(48), dp(48)
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                on_release: app.count_clients_print()
