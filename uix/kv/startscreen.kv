# -*- coding: utf-8 -*-

#:import NavDrawer uix.baseclass.navdrawer.NavDrawer
#:import License uix.baseclass.license.License
#:import BaseScreen uix.baseclass.basescreen.BaseScreen
#:import About uix.baseclass.about.About
#:import Reports uix.baseclass.old_report.Reports
#:import Zones uix.baseclass.zones.Zones
#:import ShortReport uix.baseclass.short_report.ShortReport
#:import TotalReport uix.baseclass.total_report.TotalReport
#:import Result uix.baseclass.result.Result
#:import Parameters uix.baseclass.parameters.Parameters

<StartScreen>
    id: screen

    MDToolbar:
        id: action_bar
        background_color: app.theme_cls.primary_color
        title: app.title
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        elevation: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}

    ScreenManager:
        id: manager
        size_hint_y: None
        height: root.height - action_bar.height

        BaseScreen:
            id: base

        Zones:
            id: zones

        ShortReport:
            id: short_report

        TotalReport:
            id: total_report

        Reports:
            id: old_report

        License:
            id: license

        About:
            id: about

        Parameters:
            id: parameters

        Result:
            id: result

    MDNavigationDrawer:
        id: nav_drawer

        NavDrawer:
