# -*- coding: utf-8 -*-

#:import NavDrawer uix.baseclass.navdrawer.NavDrawer
#:import License uix.baseclass.license.License
#:import BaseScreen uix.baseclass.basescreen.BaseScreen
#:import About uix.baseclass.about.About
#:import About uix.baseclass.report.Reports
#:import About uix.baseclass.zones.Zones
#:import About uix.baseclass.short_report.ShortReport
#:import About uix.baseclass.total_report.TotalReport

<StartScreen>

    MDToolbar:
        id: action_bar
        background_color: app.theme_cls.primary_color
        title: app.title
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        elevation: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}

    ScreenManager:
        id: manager
        size_hint_y: None
        height: root.height - action_bar.height

        BaseScreen:
            id: base

        Zones:
            id: zones

        ShortReport:
            id: short_report

        TotalReport:
            id: total_report

        Reports:
            id: report

        License:
            id: license

        About:
            id: about

    MDNavigationDrawer:
        id: nav_drawer

        NavDrawer:
